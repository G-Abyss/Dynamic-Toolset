<?xml version="1.0"?>
<robot name="my_robot">
  <link name="base_link">
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_to_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="100"/>
  </joint>

  <link name="wheel_link">
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder length="1" radius="0.5"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="1" radius="0.5"/>
      </geometry>
    </collision>
  </link>
</robot>
